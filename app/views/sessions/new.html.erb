<% title "Log in" %>

<!--p>Don't have an account? <%= link_to "Sign up!", signup_path %></p-->

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :login, "Nombre de Usuario o email" %>
    <%= text_field_tag :login, params[:login] %><br>
  </p>
  <p>
    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password %><br>
  </p>
  <p><%= submit_tag "Log in" , class: "btn btn-large btn-primary"  %></p>
<% end %>
