<% title "Actualizar Calificacion" %>
<h1>Editar Calificacion</h1>
<!--%= form_for :calification, url: calification_path(@calification), method: :patch do |f| %-->
<%=form_for (@calification) do |f|%>
	<div class="row">
  		<div class="span6 offset3">
			<p>
    			<%= f.label :name, "Nombre" %>
    			<%= f.text_field :name %><br>
  			</p>
			<p>
    			<%= f.label :ponderation, "Ponderacion" %>
    			<%= f.text_field :ponderation %><br>
  			</p>
 			<p>
    		<%= f.submit "Guardar" , class: "btn btn-large btn-primary" %>
			</p>
		</div>
	</div>
<%end%>
<%= link_to 'Volver', califications_path %>


 

