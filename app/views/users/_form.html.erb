<div class="row">
  <div class="span6 offset3">
<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name, "Nombre Completo" %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :phone, "Telefono" %>
    <%= f.text_field :phone %>
  </p>
  
  <p>
    <%= f.label :birthday, "Fecha de Nacimiento" %>
    <%= f.date_select :birthday, :start_year => 1960, :end_year=>2013 %>
  </p>
  
  <p>
    <%= f.label :username, "Nombre De Usuario" %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirmar Password" %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :rol, "Rol" %>
  <%= f.select :rol, options_for_select([["Docente", "Docente"], ["Estudiante", "Estudiante"]])%>
</p>
  <p>
  <%= f.submit (@user.new_record? ? "Registrarse" : "Guardar"), class: "btn btn-large btn-primary" %>
  </p>
<% end %>
</div>
</div>